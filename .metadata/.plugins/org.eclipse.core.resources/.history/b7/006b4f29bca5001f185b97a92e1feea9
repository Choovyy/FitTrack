# Application name
spring.application.name=FitTrack

# JDBC connection (update database name as needed)
spring.datasource.url=jdbc:mysql://localhost:3306/fittrack

# Datasource driver
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# Database login credentials
spring.datasource.username=root
spring.datasource.password=Johngerard123++

# Timezone configuration for Jackson (JSON formatting)
spring.jackson.time-zone=Asia/Manila

# Auto-create tables - Use 'validate' for checking schema consistency without auto-updating
spring.jpa.hibernate.ddl-auto=validate

# Show SQL queries in the console
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# Enable Hibernate SQL comments for easier debugging
spring.jpa.properties.hibernate.use_sql_comments=true

# Connection pooling settings for HikariCP
spring.datasource.hikari.maximum-pool-size=10
spring.datasource.hikari.connection-timeout=30000
spring.datasource.hikari.idle-timeout=600000
spring.datasource.hikari.max-lifetime=1800000

# Database migration tool (Flyway)
spring.flyway.enabled=true
spring.flyway.locations=classpath:db/migration

# Prevent full stack trace from appearing in error responses
server.error.include-stacktrace=never
