# Application name
spring.application.name=FitTrack

# JDBC connection (update database name as needed)
spring.datasource.url=jdbc:mysql://localhost:3306/fittrack

# Datasource driver
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# Database login credentials
spring.datasource.username=root
spring.datasource.password=Johngerard123++
spring.jackson.time-zone=Asia/Manila

# Auto-create tables
spring.jpa.hibernate.ddl-auto=update

# Show SQL queries in the console
spring.jpa.show-sql=true

# Prevent full stack trace from appearing in error responses
server.error.include-stacktrace=never
spring.jpa.properties.hibernate.format_sql=true